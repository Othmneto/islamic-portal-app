    }
  ],
  "shortcuts": [
    {
      "name": "Today",
      "short_name": "Today",
      "description": "Go to today's date",
      "url": "/calendar.html?view=today",
      "icons": [
        {
          "src": "/icons/shortcut-today.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Prayer Times",
      "short_name": "Prayers",
      "description": "View today's prayer times",
      "url": "/calendar.html?view=prayers",
      "icons": [
        {
          "src": "/icons/shortcut-prayer.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Add Event",
      "short_name": "Add Event",
      "description": "Create a new event",
      "url": "/calendar.html?action=add-event",
      "icons": [
        {
          "src": "/icons/shortcut-add.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "protocol_handlers": [
    {
      "protocol": "web+islamic-calendar",
      "url": "/calendar.html?event=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/calendar.html?import=ics",
      "accept": {
        "text/calendar": [".ics"]
      }
    }
  ],
  "share_target": {
    "action": "/calendar.html?share=event",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}